<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"
    android:elevation="10dp"
    android:splitMotionEvents="false"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/receipt_id"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/ic_receipts"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="#2- 0334"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/receipt_id"
            android:gravity="center|end"
            android:paddingRight="20dp"
            android:text="21/12/2018"
            android:textSize="14sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_below="@+id/receipt_id"
            android:background="@color/border_gray" />

        <TextView
            android:id="@+id/cashier"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view1"
            android:gravity="center|start"
            android:paddingLeft="20dp"
            android:text="Cashier : Owner "
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_below="@+id/cashier"
            android:background="@color/border_gray" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view2"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="Total"
            android:textColor="@color/text_black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/total_amount"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view2"
            android:layout_toRightOf="@+id/total"
            android:gravity="center|end"
            android:paddingRight="20dp"
            android:text="0.00"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_view"
            style="@style/button_primary_margin40"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/total_amount"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_pay"
            android:text="View"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_pay"
            style="@style/button_primary_margin40"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/total_amount"
            android:layout_marginLeft="5dp"
            android:text="Pay"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/btn_pay"
            android:layout_marginTop="10dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>