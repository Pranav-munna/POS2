<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"
    android:elevation="10dp"
    android:splitMotionEvents="false"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/relativelayout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_modifier_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="Test group"
            android:textSize="22sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_modifier_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_modifier_group_name"
            android:layout_toLeftOf="@+id/tv_modifier_amount"
            android:paddingLeft="20dp"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_modifier_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_modifier_group_name"
            android:paddingRight="20dp"
            android:text=""
            android:textSize="20sp" />

    </RelativeLayout>


    <!--<View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_gray"
        android:layout_below="@+id/tv_modifier_name"/>-->

</android.support.v7.widget.CardView>