<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:splitMotionEvents="false"
    android:id="@+id/rv_layout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgrount_primary_tint"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/colorss"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="15dp"
        android:src="@drawable/ic_delete" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/amount"
        android:layout_toRightOf="@+id/colorss"
        android:gravity="bottom"
        android:maxLines="1"
        android:text="Apple x (2)"
        android:textColor="@color/text_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/base_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/amount"
        android:layout_toRightOf="@+id/colorss"
        android:gravity="center_vertical"
        android:text="100.00"
        android:textColor="@color/text_gray"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_toLeftOf="@+id/delete_item"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="0"
        android:textColor="@color/text_gray" />

    <TextView
        android:id="@+id/tv_modifier_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/base_amount"
        android:layout_toLeftOf="@+id/amount"
        android:layout_toRightOf="@+id/colorss"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/text_gray"
        android:textSize="10sp" />


    <ImageButton
        android:id="@+id/delete_item"
        android:layout_width="35dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_delete" />

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@+id/tv_modifier_name"
        android:background="@color/shadow_lite" />

</RelativeLayout>